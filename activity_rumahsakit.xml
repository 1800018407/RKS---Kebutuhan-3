<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bfe3b4"
    android:orientation="vertical"
    tools:context=".rumahsakit">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Rumah Sakit Daerah Jogja"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#049372"
        android:layout_marginLeft="50sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/siloam"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RS Siloam"
        android:textSize="20sp"
        android:textColor="#049372"
        android:layout_marginLeft="20sp"
        android:id="@+id/maps"
        android:layout_marginTop="200sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/ptau"
        android:layout_marginLeft="200dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RS PTAU"
        android:textSize="20sp"
        android:textColor="#049372"
        android:layout_marginLeft="200sp"
        android:layout_marginTop="200sp"
        android:id="@+id/ptau"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="280dp"
        android:src="@drawable/rsud"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RSUD Jogja"
        android:textSize="20sp"
        android:textColor="#049372"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="380sp"
        android:id="@+id/rsud"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="280dp"
        android:src="@drawable/rsi"
        android:layout_marginLeft="200dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RS SH"
        android:textSize="20sp"
        android:textColor="#049372"
        android:layout_marginLeft="200sp"
        android:layout_marginTop="380sp"
        android:id="@+id/rsi"/>

</RelativeLayout>